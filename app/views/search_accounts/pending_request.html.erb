<h3>List of Pending Requests</h3>
<table class="admin_table" cellspacing=0 , cellpadding=0 , width= 100%>
	<tr>
		<th>Name</th>
		<th>Description</th> 
		<th>Contact</th> 
		<th>Email</th>  
		<th>Actions</th>
	</tr>
	<%= form_tag(authenticate_requests_search_accounts_path) do %>
	<% @claims.each do |claim| %>
	<tr class="even">
		<td><%= claim.user.full_name %></td>
		<td><%= claim.message %></td>
		<td><%= claim.email %></td>
		<td><%= claim.phone %></td>
		<td><%= check_box_tag 'select[]', claim.id %></td>
	</tr>
	<% end %>


	<tr>
		<td colspan=4 align="right">
			<%= submit_tag "Approve" %> 
		</td>
		<td>	
			<%= submit_tag "Reject" %>
		</td>
	</tr>	
	<% end %>
</table>    

