<h1>Listing users</h1>

<table>
	<tr>
		<th>First name</th>
		<th>Last name</th>
		<th>Sex</th>
		<th>Street</th>
		<th>City</th>
		<th>Zipcode</th>
		<th>State</th>
		<th>Salt</th>
		<th>Hashed password</th>
		<th>Account type</th>
		<th>Email</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @users.each do |user| %>
	<tr>
		<td><%= user.first_name %></td>
		<td><%= user.last_name %></td>
		<td><%= user.sex %></td>
		<td><%= user.street %></td>
		<td><%= user.city %></td>
		<td><%= user.zipcode %></td>
		<td><%= user.state %></td>
		<td><%= user.salt %></td>
		<td><%= user.hashed_password %></td>
		<td><%= user.account_type %></td>
		<td><%= user.email %></td>
		<td><%= link_to 'Show', user %></td>
		<td><%= link_to 'Edit', edit_user_path(user) %></td>
		<td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>
</table>

