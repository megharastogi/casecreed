

<div id="forms">
	<div class="subheading">Editing user</div>

	<%= form_for @user , :html => { :multipart => true } do |f| %>
		<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

			<ul>
				<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>

		<div class="field">
			<%= f.label :first_name %>
			<%= f.text_field :first_name %>
		</div>

		<div class="field">
			<%= f.label :last_name %>
			<%= f.text_field :last_name %>
		</div>
		<%= f.fields_for :client_detail do |a_d| %>
		<div class="field">
			<%= a_d.label :address %>
			<%= a_d.text_field :address %>
		</div>
		<% end %>
		<div class="field">
			<%= f.label :city %>
			<%= f.text_field :city %>
		</div>
		<div class="field">
			<%= f.label :state %>
			<%= f.text_field :state %>
		</div>
		<div class="field">
			<%= f.label :zipcode %>
			<%= f.text_field :zipcode %>
		</div>

		<div class="field">
			<%= f.hidden_field :profile,:value=> 1 %>
		</div>
		<div class="field">
			<%= f.label :avatar, "Profile Image" %>
			<%= f.file_field :avatar %>
		</div>
		<div class="actions">
			<%= f.submit "Update Details" , :class => "orange_really_big_button" %>
		</div>
		<% end %>
	</div>

