<div class="subheading">Change Password</div>
<div id="forms">
	<%= form_for @user , :url=> update_password_users_path  do |f|  %>
		<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this password from being saved:</h2>  						<ul>
				<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<div class="field">
			<%= f.label :old_password, "Old Password" %>
			<%= f.password_field :old_password %>
		</div>
		<div class="field">
			<%= f.label :password, "New Password" %>
			<%= f.password_field :password %>
			<span class="hint">(Longer than 6 characters and not easy to guess)</span>
		</div>

		<div class="field">
			<%= f.label :password_confirmation, "Confirm New Password" %>
			<%= f.password_field :password_confirmation %>
			<span class="hint">(same as above)</span>
		</div>

		<div class="field">
			<%= f.submit 'Change Password' , :class=>"orange_really_big_button" %>
		</div>
		<% end %>
	</div>

