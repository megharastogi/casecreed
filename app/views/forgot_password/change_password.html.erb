<div id="forms">
	<div class="subheading">Reset Password</div>
	<p>Select your new password and enter it below.</p>


	<%= form_for :user,  @user, :url=>update_password_forgot_password_index_path  do |f| %>

		<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this invited from being saved:</h2>  <ul>
				<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>

		<%= f.hidden_field :forgot_password_code %>

		<div class="field">
			<%= f.label :password , "New Password"%>
			<%= f.password_field :password %>
			<span class="hint">(Longer than 6 characters and not easy to guess)</span>
		</div>

		<div class="field">
			<%= f.label :password_confirmation, "Re-enter New Password" %>
			<%= f.password_field :password_confirmation %>
			<span class="hint">(same as above)</span>
		</div>

		<div class="field">
			<%= f.submit 'Reset Password' , :class => "orange_really_big_button" %>
		</div>

		<% end %>
	</div>

